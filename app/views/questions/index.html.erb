<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
    <p class="mt-sm"><%= link_to "Вопрос #{question.id}", question_path(id: question.id)%></p>
  </div>
<% end %>
